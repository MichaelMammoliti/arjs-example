{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "resolveJsonModule": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "ES2019",
    "declaration": false,
    "skipLibCheck": true,
    "lib": ["es2022", "dom"]
  },
  "types": ["node"],
  "exclude": ["dist", "node_modules"]
}
